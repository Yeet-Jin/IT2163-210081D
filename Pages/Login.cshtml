}

@using AspNetCore.ReCaptcha
@Html.ReCaptcha()

<div class="container mt-5">
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Login </h1>
			<form method="post" asp-antiforgery="true">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="mb-3">
					<label class="form-label" asp-for="LMemberModel.Email">Email Address</label>
					<input type="Text" asp-for="LMemberModel.Email" class="form-control" />
					<span asp-validaton-for="LMemberModel.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LMemberModel.Password">Password</label>
					<input type="password" asp-for="LMemberModel.Password" class="form-control" />
					<span asp-validaton-for="LMemberModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3 form-check">
					<input type="checkbox" asp-for="LMemberModel.RememberMe" class="form-check-input" />
					<label class="form-check-label" asp-for="LMemberModel.RememberMe">Remember Me?</label>
				</div>

				<div class="mb-3 form-check">
					<a asp-page="/ForgetPassword">Forgot your password?</a>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Login</button>
				</div>
			</form>
		</div>
	</div>
</div>

